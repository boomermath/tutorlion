---
import Layout from "../layout/Layout.astro";
import Field from "../components/Field.astro";
---


<Layout>
    <div class="flex flex-col justify-center items-center text-center mt-0 m-10 p-6">
        <h1 class="text-6xl text-orange-500 font-poppins font-extrabold m-10">Register with us today!</h1>
        <form class="flex flex-col" method="POST">
            <div class="block">
                <div class="flex flex-col justify-center items-center md:flex-row md:inline-flex space-x-0 md:space-x-5">
                    <Field name="firstname" label="First name"/>
                    <Field name="lastname" label="Last name"/>
                </div>
                <div class="flex justify-center items-center">
                    <Field name="email" type="email" label="Email"/>
                </div>
            </div>
            <div class="m-10">
                <label class="block text-2xl" for="content">Message</label> <br/>
                <textarea class="h-[200px] outline-4 outline-orange-400 md:w-[800px] p-2 resize-y border-box z-50"
                          id="content" name="content"/>
            </div>
            <div>
                <button class="w-1/2" type="submit">
                    <span class="bg-orange-500 rounded-lg text-white text-xl hover:bg-yellow-400 p-4 m-2">
                        Send
                    </span>
                </button>
            </div>
        </form>
    </div>
</Layout>