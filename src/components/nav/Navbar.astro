---
import {MobileNav} from "./MobileNav.jsx";
import {Image} from "astro:assets";
import faviconClear from "../../assets/favicon-clear.png";
const links = [
    {name: "Home", href: "/"},
    {name: "Tutors", href: "/tutors"},
    {name: "About", href: "/about"},
    {name: "Contact", href: "/contact"},
]
---
<div class="bg-brown sticky z-50 flex items-center top-0 p-1 md:shadow-lg overflow-hidden">
    <a href="/" class="p-3 pr-6 -m-2 inline-flex space-x-2 justify-center items-center text-white">
        <Image class="h-[72px] w-[72px]" src={faviconClear} alt="logo"/>
        <div class="text-2xl md:text-4xl font-extrabold poppins font-montserrat">TutorLion</div>
    </a>
    <nav class="space-x-3.5 p-6 hidden md:block ml-auto text-white">
        {links.map(
            link =>
                    <a class="hover:underline" href={link.href}>{link.name}</a>)
        }
    </nav>
</div>

<MobileNav client:media="(max-width: 768px)">
    {
        links.map(
            link =>
                    <div class="p-2">
                        <a class="text-xl active:underline" href={link.href}>{link.name}</a>
                    </div>
        )
    }
</MobileNav>
