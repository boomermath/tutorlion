---
interface Props {
    image: string,
    name: string,
    position: string
}

const {
    image, name, position
} = Astro.props;
---

<div class="group flex flex-col justify-center items-center p-10 shadow-2xl rounded-lg">
    <div>
        <img class="w-[300px] rounded-full" src={image} alt={`team member ${name}`}/>
    </div>
    <div class="flex flex-col justify-center items-center text-center m-2">
        <p class="text-4xl md:text-5xl font-poppins font-extrabold mb-4">{name}</p>
        <p class="text-2xl md:text-3xl font-poppins font-semibold italic group-hover:underline mb-4">{position}</p>
    </div>
</div>
