---
import {GoogleFontsOptimizer as Fonts} from "astro-google-fonts-optimizer";
import {SEO} from "astro-seo";
import Navbar from "../components/nav/Navbar.astro";
import Footer from "../components/Footer.astro";

const defaultDescription = `TutorLion: At TutorLion, 
we are committed to providing exceptional 
academic support to middle and elementary school students across the country.`;

let {title, description} = Astro.props as {title: string, description: string};

title = "Tutorlion - Quality 1-on-1 Lessons at $15/hr" ?? title;
description = description ?? defaultDescription;
---

<html lang="en">
<head>
    <meta charset="utf-8"/>
    <link rel="icon" type="image/x-icon" href="/favicon.ico"/>
    <meta name="viewport" content="width=device-width"/>
    <meta name="generator" content={Astro.generator}/>
    <title>TutorLion</title>
    <Fonts url="https://fonts.googleapis.com/css2?family=Nunito&display=swap"/>
    <Fonts url="https://fonts.googleapis.com/css2?family=Poppins&display=swap"/>
    <Fonts url="https://fonts.googleapis.com/css2?family=Montserrat&display=swap"/>
    <SEO
            title={title}
            description={description}
            openGraph={{
                basic: {
                    title: title,
                    type: "Tutoring service",
                    image: "/banner.webp",
                }
            }}
            extend={{
                link: [{rel: "icon", href: "/favicon.ico"}],
                meta: [
                    {
                        name: "twitter:image",
                        content: "/banner.webp",
                    },
                    {name: "twitter:title", content: "Tutorlion"},
                    {name: "twitter:description", content: description},
                ],
            }}
    />
</head>
<body class="flex flex-col min-h-screen w-screen overflow-x-hidden font-nunito">
<Navbar/>
<main class="flex-1 bg-stone-100">
    <slot/>
</main>
<Footer/>
</body>
</html>